<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:id="@+id/item_oil_history_card_root"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="8dp"
  android:layout_marginBottom="8dp"
  android:elevation="4dp"
  card_view:cardBackgroundColor="@color/white"
  card_view:cardCornerRadius="4dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:orientation="horizontal">
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent">
      <TextView
        android:id="@+id/tv_item_number"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_margin="8dp"
        android:layout_gravity="center"
        android:background="@drawable/circle_orange"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="100"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:tint="@color/colorPrimary" />

    </LinearLayout>
    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginStart="4dp">

      <ImageView
        android:id="@+id/icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:drawingCacheQuality="high"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_oil_white_24dp"
        android:tint="@color/black" />

      <TextView
        android:id="@+id/tv_item_oil_brand"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@+id/icon"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="@string/oil_brand_name"
        android:textColor="@color/black"
        android:textSize="24dp" />

      <TextView
        android:id="@+id/tv_item_oil_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_below="@+id/tv_item_oil_brand"
        android:layout_gravity="start"
        android:layout_toRightOf="@+id/icon"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/oil_type"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp" />

      <TextView
        android:id="@+id/tv_item_oil_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_alignBaseline="@+id/tv_item_oil_brand"
        android:layout_alignParentEnd="true"
        android:layout_gravity="start"
        android:paddingTop="0dp"
        android:paddingStart="16dp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:gravity="center"
        android:text="10.5L"
        android:textColor="@color/colorAccent"
        android:textSize="18dp" />

      <TextView
        android:id="@+id/tv_item_oil_service_done_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentBottom="true"
        android:paddingTop="4dp"
        android:paddingBottom="2dp"
        android:paddingStart="5dp"
        android:background="@drawable/clicked_gray"
        android:drawableStart="@drawable/ic_today_black_24dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="01/01/2018"
        android:textColor="@color/black"
        android:textSize="18dp" />


    </RelativeLayout>
  </LinearLayout>

</android.support.v7.widget.CardView>

